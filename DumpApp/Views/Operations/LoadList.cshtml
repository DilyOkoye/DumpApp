@model DumpApp.BAL.OperationsModel.ViewModel.OperationsViewModel

@{
    ViewBag.Title = "LoadDump";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Load List</h3>

        <div class="panel-options">
            <a href="#" data-toggle="panel">
                <span class="collapse-icon">&ndash;</span>
                <span class="expand-icon">+</span>
            </a>
            <a href="#" data-toggle="remove">
                &times;
            </a>
        </div>
    </div>
    <div class="panel-body">
        <div id="example-3_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <script type="text/javascript">
                jQuery(document).ready(function ($) {
                    $("#example-4").dataTable().yadcf([
                        { column_number: 1, filter_type: 'text' },
                        { column_number: 2, filter_type: 'text' },
                        { column_number: 3, filter_type: 'text' },
                        { column_number: 4, filter_type: 'text' },
                        { column_number: 5, filter_type: 'text' },
                        { column_number: 6, filter_type: 'text' },
                        { column_number: 7, filter_type: 'text' },
                        { column_number: 8, filter_type: 'text' }
                    ]);
                });
            </script>
           
            <br />
            <table class="table uk-responsive-width table-striped table-bordered dataTable" id="example-4" role="grid" aria-describedby="example-4_info">
                <thead>
                    <tr class="replace-inputs">
                        <th>SNo</th>
                        <th>Dump Name</th>
                        <th>Tape Name</th>
                        <th>File Name</th>
                        <th>Dump Type</th>
                        <th>Tape Type</th>
                        <th>Dump Date</th>
                        <th>Status</th>
                        <th>Created By</th>
                    </tr>
                </thead>
                <tbody>
                    @{int count = 0;}
                    @foreach (var row in Model.ListOfLoad)
                    {
                        count = count + 1;

                        <tr>
                            <td>@count</td>
                            <td>@row.DumpName</td>
                            <td>@row.TapeIdentifier</td>
                            <td>@row.Filename</td>
                            <td>@row.DumpType</td>
                            <td>@row.TapeType</td>
                            <td>@row.DumpDate</td>
                            <td style="width:50px">
                                @switch (row.Status)
                                {
                                    case "Dumped":
                                        <span class="label label-success">@row.Status</span>
                                        break;
                                    case "Saved":
                                        <span class="label label-info">@row.Status</span>
                                        break;
                                    case "Pending":
                                        <span class="label label-warning">@row.Status</span>
                                        break;
                                    case "Error":
                                        <span class="label label-danger">@row.Status</span>
                                        break;
                                    default:
                                        <span class="label label-default">@row.Status</span>
                                        break;
                                }
                            </td>
                            <td>@row.CreatedBy</td>
                        </tr>
                    }
                </tbody>


            </table>

        </div>
    </div>
</div>
