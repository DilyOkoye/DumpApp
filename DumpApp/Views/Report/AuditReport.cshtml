@model DumpApp.BAL.ReportModel.ViewModel.ReportViewModel
@{
    ViewBag.Title = "Audit Trail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ReportViewerForMvc;
<style>
    #ReportFrame {
        overflow: scroll;
        overflow-x: scroll;
        overflow-y: scroll;
        border: none;
    }
</style>

<div class="row">
    <div class="col-sm-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Audit Trail Report</h3>
                <div class="panel-options">
                    <a href="#" data-toggle="panel">
                        <span class="collapse-icon">&ndash;</span>
                        <span class="expand-icon">+</span>
                    </a>
                    <a href="#" data-toggle="remove">
                        &times;
                    </a>
                </div>
            </div>
            @using (Html.BeginForm("AuditReport", "Report", new { @id = "Report" }))
            {
                @Html.AntiForgeryToken()
                <div class="panel-body">

                    <div role="form" class="form-horizontal">

                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="field-1">From Date</label>

                            <div class="col-sm-3">

                                @Html.TextBoxFor(model => model.fromDate, new { @autocomplete = "off", @required = "required", @class = "form-control datepicker", })
                            </div>

                            <label class="col-sm-2 control-label" for="field-1">To Date</label>

                            <div class="col-sm-3">

                                @Html.TextBoxFor(model => model.toDate, new { @autocomplete = "off", @required = "required", @class = "form-control datepicker", })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="field-3"></label>
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-success">Generate Report</button>
                            </div>

                        </div>

                    </div>

                </div>
            }
        </div>

    </div>
    <br />
    <br />
    @if (ViewBag.ReportByMemberAge != null)
    {


        <div class="col-sm-12" id="ReportFrame">
            @Html.ReportViewer(ViewBag.ReportByMemberAge as Microsoft.Reporting.WebForms.ReportViewer)
            <hr />
        </div>

    }
    @if (ViewBag.ReportByMemberAgeC != null)
    {


        <div class="col-sm-12">
            @Html.ReportViewer(ViewBag.ReportByMemberAgeC as Microsoft.Reporting.WebForms.ReportViewer)
        </div>

    }
</div>
